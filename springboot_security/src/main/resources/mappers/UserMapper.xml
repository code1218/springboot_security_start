<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.springboot.security.domain.user.UserRepository">
	<select id="usernameCheck" parameterType="com.springboot.security.domain.user.User" resultType="Integer">
		select
			count(username)
		from
			user_mst
		where
			username = #{username};
	</select>
	
	<insert id="signup" parameterType="com.springboot.security.domain.user.User">
		insert into
			user_mst
		values(
			0,
			#{username},
			#{password},
			#{email},
			#{name},
			#{role},
			#{provider},
			now(),
			now()
		);
	</insert>
	
	<select id="getUser" resultType="com.springboot.security.domain.user.User">
		select
			*
		from
			user_mst
		where
			username = #{username};
	</select>
</mapper>













